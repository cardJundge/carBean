.whole{
  position: relative;
  display: flex;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 50rpx;
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  font-family: PingFangSC-Medium;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  z-index: 1000;
  padding-bottom: 14rpx;
}
.swiper-tab-list {
  font-size: 30rpx;
  color: #777777;
  padding-left: 40rpx;
  position: relative;
  letter-spacing: 2rpx;
}
.active {
  color: #000;
  /* border-bottom: 5rpx solid #000; */
  font-weight: 600;
  font-size: 40rpx;
}

.line{
  width: 36rpx;
  height: 10rpx;
  background: #1a84ff;
  margin: 10rpx auto;
  border-radius: 30px;
}

.tab-content {
  text-align: center;
  padding: 100rpx 50rpx;
}

.sidelabel{
  position: absolute;
  right: 0;
  top:0;
  z-index: 2000;
}

.sidelabel image{
  width: 70rpx;
  height: 80rpx;
}

.com-style{
  position: absolute;
  right: 0;
  top:0;
  z-index: 1500;
  display: flex;
  flex-direction: column;
  background: #1a84ff;
  color: white;
  line-height: 60rpx;
  align-items: center;
  width: 240rpx;
  border-top-left-radius: 10%;
  border-bottom-left-radius: 10%;
  padding: 20rpx 0;
}

.close{
  width: 30rpx;
  height: 10rpx;
  background: white;
  position: absolute;
  right: 20rpx;
  top: 24rpx;
  border-radius: 30rpx; 
}

li{
  display: flex;
  align-items: center;
  width: 180rpx;
}

.circle{
  width: 15rpx;
  height: 15rpx;
  box-shadow: 0 0 0rpx 4rpx rgba(255, 254, 254, 0.5);
  background: white;
  border-radius: 50%;
}