  z-index: 10
} 

.setting{
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  top: 720rpx;
  right: 30rpx;
  z-index: 10
}

.setshow{
  position: fixed;
  top: 500rpx;
  right: 30rpx;
  z-index: 100;
}



