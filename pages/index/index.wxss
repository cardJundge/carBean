/* 新手奖励或者签到奖励的豆子 */

.reward-list {
  width: 500rpx;
  height: 320rpx;
  display: flex;
  /* align-items: center; */
  justify-content: space-around;
  flex-wrap: wrap;
}

.reward-box {
  background: transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  /* position: absolute; */
}

.reward-box>text {
  height: 30rpx;
  line-height: 30rpx;
}

.reward-cell {
  width: 120rpx;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  animation: mymove 3s infinite;
  animation-direction: alternate;
  -webkit-animation-direction: alternate;
}

@keyframes mymove {
  from {
    transform: translate3d(0, -20rpx, 0);
  }

  to {
    transform: translate3d(0, 20rpx, 0);
  }
}

.reward {
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  border-radius: 50%;
  margin: 0 auto;
  background-image: radial-gradient(50% 105%, #a2bcff 50%, #5482f7 92%, #83a6ff 100%);
  /* box-shadow: 0 0 10rpx 0 #81b2fa; */
  background: url('https://6368-cheguanjia1-beb14e-1259199411.tcb.qcloud.la/home/energy_bubble.png?sign=9273df96f0691dded01803474f8e1c38&t=1557743726') no-repeat center;
  background-size: 100% 100%;
  margin-bottom: 12rpx;
}

.reward>text {
  font-family: PingFangSC-Medium;
  color: #fff;
}

