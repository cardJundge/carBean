/* 首页 */

.container {
  width: 100%;
  padding-bottom: 24rpx;
}

.ripple {
  background-color: rgba(79,147,253,1);
  border-radius: 100%;
  height: 20rpx;
  width: 20rpx;
  position: absolute;
  z-index: 999;
  -webkit-transform: scale(0);
  overflow: hidden;
}

@-webkit-keyframes ripple {
  100% {
    -webkit-transform: scale(6);
    transform: scale(6);
    background-color: transparent;
  }
}

.games {
  width: 100%;
  height: 870rpx;
  padding: 46rpx 36rpx 70rpx 56rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  background: url('https://6368-cheguanjia1-beb14e-1259199411.tcb.qcloud.la/home/index_bg.png?sign=143eb885ac5b99a059d667da2a69bee0&t=1557479103') no-repeat left top;
  background-size: 100% 100%;
  position: relative;
}

.games-top {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  position: relative;
}

.weather-tip {
  width: 328rpx;
  height: auto;
  position: absolute;
  bottom: -20rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 999;
  background: url("https://6368-cheguanjia1-beb14e-1259199411.tcb.qcloud.la/home/tip.png?sign=c6fb245c6f58b3e4cad3ab810bc79325&t=1560390194") center no-repeat;
  background-size: 100% 100%;
  padding: 12rpx 12rpx 36rpx;
  font-size: 24rpx;
}

button::after {
  border: none;
  display: inline-block;
}

.user {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.user-cell {
  width: 246rpx;
  height: 90rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  padding: 0;
  margin: 0;
  font-size: 30rpx;
}

.user-img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: #d8d8d8;
  /* border: 3rpx solid #fff; */
  margin-right: 12rpx;
}

.user-img image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.user-name {
}

.activity-bar {
  display: flex;
  flex-direction: column;
}

.item {
  width: 74rpx;
  height: 86rpx;
  margin: 0;
  padding: 0;
  background-color: transparent;
  margin-bottom: 57rpx;
}

.item-hd {
  margin-bottom: 0;
}

.item-hw {
  margin-left: 200rpx;
}

.item image {
  width: 74rpx;
  height: 86rpx;
}

.games-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bean {
  display: flex;
  align-items: center;
}

.bean-img {
  width: 115rpx;
  height: 90rpx;
  margin: 0;
  padding: 0;
  background-color: transparent;
}

.bean-img image {
  width: 115rpx;
  height: 90rpx;
}

.bubble {
  position: relative;
  width: 104rpx;
  /* height: 50rpx; */
  line-height: 50rpx;
  text-align: center;
  background: #fff;
  color: #fb9700;
  z-index: 99;
  border-radius: 4rpx;
}

.bubble::before {
  position: absolute;
  left: -4rpx;
  top: 10rpx;
  content: '';
  width: 30rpx;
  height: 30rpx;
  border-style: solid;
  border-width: 2rpx;
  border-color: #fff;
  border-radius: 6rpx;
  background-color: #fff;
  transform: rotate(45deg);
  /* z-index: ; */
}

.activity {
  position: relative;
}

.activity .item-img {
  margin-bottom: 0;
}

